{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "downlevelIteration": true,
    "sourceMap": false,
    "declaration": true,
    "types": ["vitest/globals"]
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules", "**/*.test.js"]
}
