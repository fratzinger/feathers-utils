{
  "name": "feathers-utils",
  "version": "1.9.1",
  "description": "Some utils for projects using '@feathersjs/feathers'",
  "author": "fratzinger",
  "repository": {
    "type": "git",
    "url": "https://github.com/fratzinger/feathers-utils"
  },
  "homepage": "https://github.com/fratzinger/feathers-utils",
  "license": "MIT",
  "main": "dist/",
  "module": "dist/esm/index.js",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/index.js"
    }
  },
  "types": "dist/",
  "directories": {
    "dist": "dist"
  },
  "files": [
    "CHANGELOG.md",
    "LICENSE",
    "README.md",
    "src/**",
    "lib/**",
    "dist/**"
  ],
  "scripts": {
    "build": "shx rm -rf dist/ && npm run tsc",
    "tsc": "tsc -p tsconfig.json && tsc -p tsconfig-esm.json",
    "version": "npm run build",
    "release": "np",
    "test": "cross-env NODE_ENV=test TS_NODE_PROJECT='tsconfig.test.json' mocha --require ts-node/register 'test/**/*.test.ts' --timeout 5000",
    "coverage": "nyc npm run test",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx"
  },
  "dependencies": {
    "@feathersjs/adapter-commons": "^4.5.12",
    "@feathersjs/errors": "^4.5.12",
    "@feathersjs/feathers": "^4.5.12",
    "feathers-hooks-common": "^5.0.6",
    "lodash": "^4.17.21",
    "type-fest": "^2.11.1"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/lodash": "^4.14.178",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.14",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.8.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-security": "^1.4.0",
    "feathers-memory": "^4.1.0",
    "mocha": "^9.2.0",
    "np": "^7.6.0",
    "nyc": "^15.1.0",
    "shx": "^0.3.4",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  }
}
