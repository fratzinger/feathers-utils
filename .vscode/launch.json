{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Mocha Tests",
        "program": "${workspaceFolder}/node_modules/mocha/bin/mocha",
        "args": [
          "--require",
          "ts-node/register",
          "--timeout",
          "999999",
          "--colors",
          "--recursive",
        ],
        "internalConsoleOptions": "openOnSessionStart",
        "env": {
          "NODE_ENV": "test",
          "TS_NODE_PROJECT": "tsconfig.test.json"
        },
        "outputCapture": "std",
        "skipFiles": [
          "<node_internals>/**"
        ]
      },
    ]
  }
  